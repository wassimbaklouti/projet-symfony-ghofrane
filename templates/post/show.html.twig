{% extends 'base-back.html.twig' %}

{% block title %}Post Details{% endblock %}

{% block content %}

<style>
    .post-details-container {
        max-width: 700px;
        margin: auto;
        padding: 30px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .post-details h2 {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
        color: #333;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .post-details h2 i {
        font-size: 26px;
        color: #9BAB10;
    }

    .details-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    .details-table th, .details-table td {
        padding: 12px;
        border-bottom: 1px solid #ddd;
        font-size: 16px;
    }

    .details-table th {
        text-align: left;
        font-weight: bold;
        color: #555;
        width: 30%;
    }

    .details-table td {
        color: #333;
    }

    .post-image {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin-top: 10px;
    }

    .btn-container {
        display: flex;
        justify-content: space-between;
        gap: 10px;
        width: 100%;
    }

    .btn-action {
        flex: 1;
        padding: 12px 15px;
        border-radius: 6px;
        font-weight: 600;
        text-align: center;
        text-decoration: none;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        border: none;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #9BAB10;
        color: white;
    }

    .btn-primary:hover {
        background-color: #016537;
    }

    .btn-secondary {
        background-color: #eeeeee;
        color: #342E37;
    }

    .btn-secondary:hover {
        background-color: #AAAAAA;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .delete-form {
        flex: 1;
        display: flex;
    }

    .delete-form button {
        width: 100%;
    }

    .comments-section {
        margin-top: 30px;
        padding: 20px;
        background: #f9f9f9;
        border-radius: 10px;
    }

    .comments-section h3 {
        font-size: 20px;
        font-weight: bold;
        color: #333;
        margin-bottom: 15px;
    }

    .comment {
        padding: 15px;
        border-radius: 6px;
        background: #fff;
        margin-bottom: 10px;
        border: 1px solid #ddd;
    }

    .comment .comment-date {
        font-size: 12px;
        color: #777;
    }

    .comment .comment-content {
        font-size: 14px;
        color: #333;
        margin-top: 5px;
    }

</style>

<div class="container mt-4">
    <div class="post-details-container">
        <h2><i class="bx bx-file"></i> Post Details</h2>

        <table class="details-table">
            <tbody>
                <tr>
                    <th></th>
                    <td>
                        {% if post.image %}
                            <img src="{{ asset('uploads/posts/' ~ post.image) }}" class="card-img-top" alt="{{ post.titre }}" style="height: 200px; object-fit: cover;">
                        {% else %}
                            <span class="text-muted">No Image</span>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>ID</th>
                    <td>{{ post.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ post.titre }}</td>
                </tr>
                <tr>
                    <th>Content</th>
                    <td>{{ post.contenu }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ post.date ? post.date|date('Y-m-d') : '-' }}</td>
                </tr>
                <tr>
                    <th>Likes</th>
                    <td>‚ù§Ô∏è {{ post.likes|length }}</td>
                </tr>
                
            </tbody>
        </table>

        <div class="btn-container">
            <a href="{{ path('app_post_index') }}" class="btn-action btn-secondary">
                <i class="bx bx-arrow-back"></i> Back to List
            </a>
            
            <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn-action btn-primary">
                <i class="bx bx-edit"></i> Edit Post
            </a>

            <form method="post" action="{{ path('app_post_delete', {'id': post.id}) }}" 
                onsubmit="return confirm('Are you sure you want to delete this post?');"
                class="delete-form">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                <button type="submit" class="btn-action btn-danger">
                    <i class="bx bx-trash"></i> Delete
                </button>
            </form>
        </div>

        <!-- Comments Section -->
        <div class="comments-section">
            <h3>üìù Comments ({{ comments|length }})</h3>

            {% if comments %}
                {% for comment in comments %}
                    <div class="comment">
                        <span class="comment-date">üìÖ {{ comment.date|date('Y-m-d') }}</span>
                        <p class="comment-content">{{ comment.contenu }}</p>
                    </div>
                {% endfor %}
            {% else %}
                <p class="text-muted">No comments available.</p>
            {% endif %}
        </div>

    </div>
</div>

{% endblock %}